---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
const image = `${Astro.url.origin}/me.webp"`;

const schema = {
  "@context": "http://schema.org",
  "@type": "Person",
  name: "Bastien",
  url: "https://bastienfaivre.com",
  sameAs: [
    "https://www.linkedin.com/in/bastienfaivre",
    "https://github.com/bastienfaivre",
  ],
  image: "https://bastienfaivre.com/me.webp",
  jobTitle: "Software Engineer",
  worksFor: {
    "@type": "Organization",
    name: "Informal Systems",
    address: {
      "@type": "PostalAddress",
      addressCountry: "Switzerland",
    },
  },
  nationality: {
    "@type": "Country",
    name: "Switzerland",
  },
};
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-4BF2KVELL3"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-4BF2KVELL3");
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="/favicon/sitemap-index.xml" />
    <!-- Basic OG tags for sharing your website's content on platforms like Facebook and LinkedIn -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.origin} />
    <meta
      property="og:image"
      content={image || "https://bastienfaivre.com/me.webp"}
    />
    <!-- Basic Twitter Card tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content={image || "https://bastienfaivre.com/me.webp"}
    />

    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  </head>
  <body
    class="bg-darkslate-700 md:h-screen flex flex-col justify-center items-center"
  >
    <slot name="loader" />
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Fira Code";
    src: url("/fonts/FiraCode-Medium.ttf") format("truetype");
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  body {
    margin: 0;
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", "Noto Sans", Helvetica,
      Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", "Noto Sans", Helvetica,
      Arial, sans-serif;
  }
  p {
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", "Noto Sans", Helvetica,
      Arial, sans-serif;
  }

  b {
    font-weight: 700 !important;
  }

  /* Code snippets */
  code,
  pre,
  .astro-code {
    font-family: "Fira Code", monospace !important;
  }

  /* Prose code blocks in articles */
  article code,
  article pre,
  article .astro-code {
    font-family: "Fira Code", monospace !important;
  }
</style>
