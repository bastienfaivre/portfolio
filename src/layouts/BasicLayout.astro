---
import type { WebPageSchema, BreadcrumbSchema } from "../lib/seo";

interface Props {
  title: string;
  description: string;
  schemas?: Array<WebPageSchema | BreadcrumbSchema>;
}

const { title, description, schemas = [] } = Astro.props;
const image = "https://bastienfaivre.com/me.webp";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Bastien",
  url: "https://bastienfaivre.com",
  sameAs: [
    "https://www.linkedin.com/in/bastienfaivre",
    "https://github.com/bastienfaivre",
  ],
  image: "https://bastienfaivre.com/me.webp",
  jobTitle: "Software Engineer",
  worksFor: {
    "@type": "Organization",
    name: "Informal Systems",
    address: {
      "@type": "PostalAddress",
      addressCountry: "Switzerland",
    },
  },
  nationality: {
    "@type": "Country",
    name: "Switzerland",
  },
};

const allSchemas = [personSchema, ...schemas];
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    <link rel="dns-prefetch" href="https://www.googletagmanager.com" />
    <link rel="canonical" href={canonicalURL} />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={image} />
    <meta property="og:image:width" content="300" />
    <meta property="og:image:height" content="300" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    {allSchemas.map((schema) => (
      <script type="application/ld+json" set:html={JSON.stringify(schema)} />
    ))}
  </head>
  <body
    class="bg-darkslate-700 md:h-screen flex flex-col justify-center items-center"
  >
    <slot name="loader" />
    <slot />

    <script is:inline>
      window.addEventListener("load", function() {
        var script = document.createElement("script");
        script.async = true;
        script.src = "https://www.googletagmanager.com/gtag/js?id=G-4BF2KVELL3";
        document.head.appendChild(script);

        script.onload = function() {
          window.dataLayer = window.dataLayer || [];
          function gtag(){window.dataLayer.push(arguments);}
          gtag("js", new Date());
          gtag("config", "G-4BF2KVELL3", {
            page_path: window.location.pathname,
            page_title: document.title,
            page_location: window.location.href
          });
        };
      });
    </script>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Fira Code";
    src: url("/fonts/FiraCode-Medium.ttf") format("truetype");
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  body {
    margin: 0;
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", "Noto Sans", Helvetica,
      Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", "Noto Sans", Helvetica,
      Arial, sans-serif;
  }
  p {
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", "Noto Sans", Helvetica,
      Arial, sans-serif;
  }

  b {
    font-weight: 700 !important;
  }

  /* Code snippets */
  code,
  pre,
  .astro-code {
    font-family: "Fira Code", monospace !important;
  }

  /* Prose code blocks in articles */
  article code,
  article pre,
  article .astro-code {
    font-family: "Fira Code", monospace !important;
  }
</style>
