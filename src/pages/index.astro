---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import IntroCard from "../components/IntroCard.astro";
import ContactsCard from "../components/ContactsCard.astro";
import AboutMe from "../components/AboutMe.astro";
import Now from "../components/Now.astro";
import New from "../components/New.astro";
---

<script>
  import { stagger, spring, timeline, type TimelineDefinition } from "motion";
  import { loaderAnimation } from "../lib/constants";
  const cards = document.querySelectorAll(".card");

  const sequence = [
    loaderAnimation,
    [
      cards,
      { y: ["40%", "0%"], opacity: [0, 1] },
      {
        at: "-0.1",
        duration: 0.4,
        delay: stagger(0.2),
        easing: spring({ velocity: 100, stiffness: 50, damping: 10 }),
      },
    ],
  ];

  timeline(sequence as TimelineDefinition);
</script>

<Layout
  title="Bastien Faivre - Software Engineer"
  description="I'm a software engineer based in Switzerland, highly interested in distributed systems."
>
  <main
    class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-3 md:p-6 lg:h-screen lg:grid-rows-8 lg:grid-cols-4 lg:gap-4 lg:max-h-[800px]"
  >
    <IntroCard />
    <Now />
    <AboutMe />
    <ContactsCard />
    <New />
    <Card
      colSpan="md:col-span-1"
      rowSpan="md:row-span-1 flex gap-4"
      title="Blog"
      href="/blog"
    />
    <Card colSpan="md:col-span-1" rowSpan="md:row-span-1">
      <p class="text-xs">
        © 2025 · <a
          href="https://github.com/Ladvace/astro-bento-portfolio"
          target="_blank"
          class="text-primary-600">Base template</a
        > crafted using <a
          href="https://astro.build/"
          target="_blank"
          class="text-primary-600">Astro</a
        > by <a
          href="https://github.com/Ladvace"
          target="_blank"
          class="text-primary-600">Gianmarco</a
        >.
      </p>
    </Card>
  </main>
</Layout>
