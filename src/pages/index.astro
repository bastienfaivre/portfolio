---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import IntroCard from "../components/IntroCard.astro";
import ContactsCard from "../components/ContactsCard.astro";
import AboutMe from "../components/AboutMe.astro";
import Now from "../components/Now.astro";
import New from "../components/New.astro";
import { Image } from "astro:assets";
---

<script>
  window.addEventListener("load", () => {
    const loader = document.querySelector(".loader") as HTMLElement;
    if (loader) {
      setTimeout(() => {
        loader.classList.add("loader-hidden");
      }, 100);
    }

    const dvdLogo = document.getElementById("dvd-logo") as HTMLAnchorElement;
    if (dvdLogo) {
      let x = Math.random() * (window.innerWidth - 200);
      let y = Math.random() * (window.innerHeight - 200);
      let xSpeed = 1.5;
      let ySpeed = 1.5;
      const logoWidth = 200;
      const logoHeight = 200;

      function animate() {
        x += xSpeed;
        y += ySpeed;

        if (x + logoWidth >= window.innerWidth || x <= 0) {
          xSpeed = -xSpeed;
          x = Math.max(0, Math.min(x, window.innerWidth - logoWidth));
        }
        if (y + logoHeight >= window.innerHeight || y <= 0) {
          ySpeed = -ySpeed;
          y = Math.max(0, Math.min(y, window.innerHeight - logoHeight));
        }

        dvdLogo.style.left = x + "px";
        dvdLogo.style.top = y + "px";

        requestAnimationFrame(animate);
      }

      window.addEventListener("resize", () => {
        x = Math.max(0, Math.min(x, window.innerWidth - logoWidth));
        y = Math.max(0, Math.min(y, window.innerHeight - logoHeight));
      });

      animate();
    }
  });
</script>

<style is:global>
  .loader {
    transition: opacity 0.5s ease-out;
  }

  .loader-hidden {
    opacity: 0 !important;
    pointer-events: none !important;
  }

  .card {
    animation: cardEntrance 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
    opacity: 0;
    transform: translateY(40%);
  }

  .card:nth-child(1) {
    animation-delay: 0s;
  }
  .card:nth-child(2) {
    animation-delay: 0.1s;
  }
  .card:nth-child(3) {
    animation-delay: 0.2s;
  }
  .card:nth-child(4) {
    animation-delay: 0.3s;
  }
  .card:nth-child(5) {
    animation-delay: 0.4s;
  }
  .card:nth-child(6) {
    animation-delay: 0.5s;
  }
  .card:nth-child(7) {
    animation-delay: 0.6s;
  }

  @keyframes cardEntrance {
    0% {
      opacity: 0;
      transform: translateY(40%);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<Layout
  title="Bastien Faivre - Software Engineer"
  description="I'm a software engineer based in Switzerland, highly interested in distributed systems."
>
  <a
    id="dvd-logo"
    href="/pp-story"
    class="fixed w-50 h-50 cursor-pointer"
    style="z-index: 0;"
  >
    <Image
      src="/images/pp-crop.png"
      width={900}
      height={920}
      alt="Curious? Click me!"
      loading="eager"
      class="w-full h-full"
    />
  </a>
  <main
    class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-3 md:p-6 lg:h-screen lg:grid-rows-8 lg:grid-cols-4 lg:gap-4 lg:max-h-[800px]"
    style="z-index: 1; pointer-events: none;"
  >
    <IntroCard />
    <Now />
    <AboutMe />
    <ContactsCard />
    <New />
    <Card
      colSpan="md:col-span-1"
      rowSpan="md:row-span-1 flex gap-4"
      title="Blog"
      href="https://dev.to/bastienfaivre"
      target="_blank"
    />
    <Card colSpan="md:col-span-1" rowSpan="md:row-span-1">
      <p class="text-xs">
        © 2025 · <a
          href="https://github.com/Ladvace/astro-bento-portfolio"
          target="_blank"
          class="text-primary-500">Base template</a
        > crafted using <a
          href="https://astro.build/"
          target="_blank"
          class="text-primary-500">Astro</a
        > by <a
          href="https://github.com/Ladvace"
          target="_blank"
          class="text-primary-500">Gianmarco</a
        >.
      </p>
    </Card>
  </main>
</Layout>
